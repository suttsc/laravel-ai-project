{
    "preset": "psr12",
    "rules": {
        "array_indentation": true,
        "no_unused_imports": true,
        "ordered_imports": true,
        "array_syntax": {"syntax": "short"},
        "single_quote": true,
        "blank_line_before_statement": {
            "statements": [
                "break",
                "continue",
                "declare",
                "return",
                "throw",
                "try"
            ]
        }
    }
}
